{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@src/*": ["src/*"]
    },
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "styles/global.css",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules", ".next", ".turbo"]
}
