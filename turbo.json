{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "tsconfig.json"],
  "globalEnv": [
    "NODE_ENV",
    "PORT",
    "STRIPE_SK",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "NEXT_PUBLIC_ADMIN_ADDRESS",
    "NEXT_PUBLIC_ADMIN_KEY_INDEX",
    "ADMIN_PRIVATE_KEY_HEX",
    "VERCEL_URL"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "STRIPE_SK",
        "PORT",
        "NEXT_PUBLIC_APP_NAME",
        "NEXT_PUBLIC_FLOW_NETWORK",
        "NEXT_PUBLIC_ADMIN_ADDRESS",
        "NEXT_PUBLIC_ADMIN_KEY_INDEX",
        "ADMIN_PRIVATE_KEY_HEX",
        "VERCEL_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:local": {
      "cache": false,
      "persistent": true
    },
    "dev:local:deploy": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "dependsOn": ["^generate"]
    },
    "db:migrate:deploy": {},
    "db:push": {},
    "db:seed": {},
    "lint": {
      "outputs": []
    }
  }
}
