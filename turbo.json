{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "tsconfig.json"],
  "globalEnv": [
    "NODE_ENV",
    "PORT",
    "STRIPE_SK",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": ["STRIPE_SK", "PORT"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "dependsOn": ["^generate"]
    },
    "db:migrate:deploy": {},
    "db:push": {},
    "db:seed": {},
    "lint": {
      "outputs": []
    }
  }
}
